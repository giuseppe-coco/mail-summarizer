{
  "manifest_version": 3,
  "name": "Gmail Summarizer AI",
  "version": "1.0",
  "description": "Ricevi notifiche in tempo reale per le nuove email Gmail",
  "permissions": [
    "identity",
    "notifications",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://api.openai.com/*"
  ],
  "key": "your_chrome_extension_id",
  "oauth2": {
    "client_id": "your_oauth_client_id",
    "scopes": [
      "https://www.googleapis.com/auth/gmail.readonly"
    ]
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Gmail Summarizer AI, your best daily-routine friend.",
    "default_icon": {
      "48": "icons/Mail-Summarizer-AI-logo-48x48.png",
      "128": "icons/Mail-Summarizer-AI-logo-128x128.png"
    }
  },
  "background": {
    "service_worker": "service_worker.js"
  },
  "icons": {
    "48": "icons/Mail-Summarizer-AI-logo-48x48.png",
    "128": "icons/Mail-Summarizer-AI-logo-128x128.png"
  }
} 